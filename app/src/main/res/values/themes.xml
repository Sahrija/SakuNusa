<resources>
    <!-- Base application theme. -->
    <style name="Theme.SakuNusa" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="floatingActionButtonStyle">@style/Widget.SakuNusa.FloatingActionButton</item>

    </style>

    <style name="TextAppearance.AppCompat.Body1.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.AppCompat.Spinner.SakuNusa">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1.White</item>
    </style>

    <style name="Widget.SakuNusa.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/red_500</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="BottomNavTextHidden" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">0sp</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@style/CustomActiveIndicator</item>
        <item name="itemBackground">@color/green_500</item>
        <item name="android:background">@color/red_500</item>
    </style>

    <style name="CustomActiveIndicator" parent="ShapeAppearance.Material3.NavigationBarView.ActiveIndicator">
        <item name="android:color">@color/green_500</item>
    </style>


    <style name="Theme.SakuNusa.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SakuNusa.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SakuNusa.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- Base application theme. -->
    <style name="Base.Theme.SakuNusa" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
</resources>